{
  "manifest_version": 3,
  "name": "3CX DATEV Bridge Connector",
  "description": "Captures 3CX WebClient call states and forwards them to 3CX-DATEV Bridge via Native Messaging.",
  "version": "0.1.0",
  "minimum_chrome_version": "114",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*/",
    "https://*/webclient/*"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/",
        "https://*/webclient/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/page-hook.js"],
      "matches": ["https://*/*"]
    }
  ],
  "action": {
    "default_title": "3CX DATEV Bridge Connector"
  }
}

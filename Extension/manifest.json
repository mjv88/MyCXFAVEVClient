{
  "manifest_version": 3,
  "name": "3CX - DATEV Connector",
  "description": "Integration between the 3CX WebClient / PWA and DATEV.",
  "version": "1.0.0.0",
  "minimum_chrome_version": "114",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*/",
    "https://*/webclient/*",
    "http://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/",
        "https://*/webclient/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/page-hook.js"],
      "matches": ["https://*/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "3CX DATEV Connector",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  }
}
